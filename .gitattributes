* text=auto

# Force LF for source code
*.ts     text eol=lf
*.tsx    text eol=lf
*.js     text eol=lf
*.json   text eol=lf
*.toml   text eol=lf
*.sh     text eol=lf
*.lua    text eol=lf
*.luau   text eol=lf
*.rbxm   binary
*.rbxmx  binary

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# ðŸ§ª Ignore binary / compiled files from diff
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

# Roblox place files â€” treat as binary
*.rbxlx  binary
*.rbxl   binary

# Luau runtime output (compiled by rbxtsc)
*.luau   text eol=lf

# TypeScript metadata â€” ignore diff
*.tsbuildinfo text diff=ignore

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
