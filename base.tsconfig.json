{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "tsBuildInfoFile": "dist/out/base.tsbuildinfo",
    "outDir": "dist/out/base",
    "rootDir": "sources/base/src",
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@rbxts",
      "node_modules/@flamework"
    ],
    "paths": {
      "@shared/*": [
        "sources/base/src/shared/*"
      ],
      "@server/*": [
        "sources/base/src/server/*"
      ],
      "@client/*": [
        "sources/base/src/client/*"
      ]
    }
  },
  "include": [
    "sources/base/src"
  ],
  "exclude": []
}