{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "../src",
    "baseUrl": "../src",
    "typeRoots": [
      "node_modules/@rbxts",
      "node_modules/@flamework"
    ],
    "paths": {
      "@shared/*": [
        "../src/shared/*"
      ],
      "@server/*": [
        "../src/server/*"
      ],
      "@client/*": [
        "../src/client/*"
      ]
    }
  },
  "include": [
    "../src"
  ]
}